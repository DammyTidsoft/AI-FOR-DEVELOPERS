#testing out openrouter on text generation
import os
import re
import sys
import json
import requests

BANNED_KEYWORDS = ["kill", "hack", "bomb"]  
API_URL = "https://openrouter.ai/api/v1/chat/completions"

def contains_banned(text):
    pattern = r"\\b(" + "|".join(re.escape(k) for k in BANNED_KEYWORDS) + r")\\b"
    return re.search(pattern, text, flags=re.IGNORECASE) is not None

def redact_text(text):
    pattern = r"\\b(" + "|".join(re.escape(k) for k in BANNED_KEYWORDS) + r")\\b"
    return re.sub(pattern, "[REDACTED]", text, flags=re.IGNORECASE)

