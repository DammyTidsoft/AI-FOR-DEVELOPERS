    if not api_key:
        print("Please set the OPENROUTER KEY environment variable.")
        sys.exit(1)

    system_prompt = (
        "You are a helpful assistant. Always be safe, avoid providing instructions for illegal or harmful activities."
    )

    user_prompt = input("Enter your prompt: ").strip()
    if not user_prompt:
        print("No prompt provided.")
        return

    # Input moderation
    if contains_banned(user_prompt):
        print("Your input violated the moderation policy.")
        return

    headers = {
        "Authorization": f"Bearer {api_key}",
        "Content-Type": "application/json",
    }

    payload = {
        "model": "gpt-3.5-turbo",
        "messages": [
            {"role": "system", "content": system_prompt},
            {"role": "user", "content": user_prompt},
        ],
        "temperature": 0.7,
        "max_tokens": 500,
    }

    try:
        resp = requests.post(API_URL, headers=headers, data=json.dumps(payload), timeout=30)
        resp.raise_for_status()
    except requests.RequestException as e:
        print("API request failed:", e)
        return

    try:
        data = resp.json()
        assistant_text = data["choices"][0]["message"]["content"]
    except Exception:
        print("Unexpected API response format.")
        return

    redacted = redact_text(assistant_text)
    if redacted != assistant_text:
        print("Your output violated the moderation policy.")
        print("\n--- Moderated Response ---\n")
        print(redacted.strip())
    else:
        print("\n--- AI Response ---\n")
        print(assistant_text.strip())

if __name__ == "__main__":
    main()
